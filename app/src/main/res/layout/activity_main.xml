<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/graphButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="GraphView"
        android:text="@string/grafico"
        app:layout_constraintTop_toBottomOf="@+id/OKButton"
        tools:layout_editor_absoluteX="16dp"
        tools:text="graph" />

    <Button
        android:id="@+id/OKButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/liga_led"
        app:layout_constraintTop_toBottomOf="@+id/manualButton"
        tools:layout_editor_absoluteX="31dp"
        tools:text="OK" />

    <Button
        android:id="@+id/manualButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="manual"
        android:text="@string/manual"
        app:layout_constraintTop_toBottomOf="@+id/parearButton"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/parearButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/parear"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>